<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coffeecoders.smartalarm">

    <uses-permission android:name="android.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.USE_FULL_SCREEN_INTENT" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Custom.Theme.SmartAlarm">
        <activity
            android:name="com.coffeecoders.smartalarm.About"
            android:exported="false"
            android:theme="@style/Custom.Theme.SmartAlarm.1"
            android:parentActivityName="com.coffeecoders.smartalarm.MainActivity"/>
        <activity
            android:name="com.coffeecoders.smartalarm.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.coffeecoders.smartalarm.AddAlarm_Activity"
            android:parentActivityName="com.coffeecoders.smartalarm.MainActivity"
            android:theme="@style/Custom.Theme.SmartAlarm.1">
            <intent-filter>
                <action android:name="from alarmActivity" />
                <action android:name="from ringtoneActivity" />
                <action android:name="from alarmActivity new" />
                <action android:name="from repeatDayActivity" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffeecoders.smartalarm.MainActivity" />
        </activity>
        <activity
            android:name="com.coffeecoders.smartalarm.CancelAlarm"
            android:excludeFromRecents="true"
            android:showOnLockScreen="true"
            android:showWhenLocked="true"
            android:turnScreenOn="true">

        </activity>
        <activity
            android:name="com.coffeecoders.smartalarm.Ringtone"
            android:exported="true"
            android:theme="@style/Custom.Theme.SmartAlarm.1"
            android:parentActivityName="com.coffeecoders.smartalarm.AddAlarm_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffeecoders.smartalarm.MainActivity" />
        </activity>
        <activity
            android:name="com.coffeecoders.smartalarm.RepeatDayActivity"
            android:exported="true"
            android:theme="@style/Custom.Theme.SmartAlarm.1"
            android:parentActivityName="com.coffeecoders.smartalarm.AddAlarm_Activity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.coffeecoders.smartalarm.MainActivity" />
        </activity>

        <service android:name="com.coffeecoders.smartalarm.ScheduleService" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true"
            android:process=":remote"
            android:showOnLockScreen="true" />
        <receiver
            android:name="com.coffeecoders.smartalarm.receiver.StopReceiver"
            android:process=":remote">
            <intent-filter>
                <action android:name="stop alarm" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.coffeecoders.smartalarm.receiver.SnoozeReceiver"
            android:process=":remote">
            <intent-filter>
                <action android:name="snooze Alarm" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.coffeecoders.smartalarm.receiver.CancelAlarmReceiver"
            android:process=":remote">
            <intent-filter>
                <action android:name="cancel alarm" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.coffeecoders.smartalarm.receiver.BootUpReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.coffeecoders.smartalarm.data.AlarmDataProvider"
            android:authorities="com.coffeecoders.smartalarm"
            android:exported="false" />
    </application>

</manifest>