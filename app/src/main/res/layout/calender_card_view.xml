<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/grid_view_bg">
    <LinearLayout
        android:id="@+id/title_alarm_on_off_llt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/event_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="10dp"
            android:layout_weight="4"
            android:hint="Event name"
            android:textStyle="bold"
            android:textColor="@color/deep_teal">
        </TextView>
        <ImageView
            android:id="@+id/event_alarm_on_off"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:minHeight="10dp"
            android:src="@drawable/ic_baseline_alarm_on_24"
            >

        </ImageView>

    </LinearLayout>


    <TextView
        android:id="@+id/event_start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_alarm_on_off_llt"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

    </TextView>

    <TextView
        android:id="@+id/event_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/event_start_time"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

    </TextView>



</RelativeLayout>