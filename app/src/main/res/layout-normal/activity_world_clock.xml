<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171717"
    android:orientation="vertical"
    tools:context=".WorldClock">

    <DigitalClock
        android:id="@+id/world_clock_digital"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center|left"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/world_clock_current_date"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/world_clock_digital"
        android:gravity="top|left"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/spinner_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/world_clock_current_date"
        android:gravity="center">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleX="1.7"
            android:scaleY="1.7" />
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/world_clock_lottie"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/spinner_layout"
        android:scaleX="1.4"
        android:scaleY="1.4"
        app:lottie_autoPlay="true"
        app:lottie_fileName="world_clock_lottie.json"
        app:lottie_loop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/world_clock_lottie"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/timeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textTimeZone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textSize="25sp" />
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_nv_view_bg"
        android:saveEnabled="false"
        app:itemRippleColor="@color/white"
        app:itemTextColor="@color/buttom_navigation_color"
        app:itemIconTint="@color/buttom_navigation_color"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>